@using DutyFree.WebCore.Extension
@using DutyFree.Service.Product
@using DutyFree.Platform.Util

@inject ProductService productService

@{
    ViewData["Title"] = "首页";
    ViewData["ng-app"] = "home";
    var products = productService.Get();
    var random = new Random().Next(21, 30);
}

@section css {
    <link rel="stylesheet" href="~/css/home/index.css" asp-append-version="true" />
}

@section scripts {
    <script type="text/javascript" src="~/js/home/index.js" asp-append-version="true"></script>
}

